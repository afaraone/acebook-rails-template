<div class='comment-div' id=<%=comment.id%>>
  <!-- <p class='comment-author'>Commented by <%= link_to comment.user.name, user_path(comment.user), method: :get, id: comment.id%> <%= comment.time_ago %></p> -->
  <p class='comment-message' id=<%=comment.id%>><%= h(comment.message).gsub(/\n/, '<br/>').html_safe %></p>

  <div class='comment-links'>
  <% if current_user == comment.user %>
    <%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %>
    <%= link_to 'Delete', post_comment_path(comment.post, comment), :data => {:confirm => "Are you sure?"}, :method => :delete %>
  <% else %>
    <%= link_to '' %>
  <% end %>
    <span class='comment-details'>Commented by <%= link_to comment.user.name, user_path(comment.user), method: :get, id: comment.id%> <%= comment.time_ago %></span>
  </div>
</div>
